<?xml version="1.0" encoding="UTF-8"?>
<!-- mcorpus DEV log config  -->
<Configuration status="INFO">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} [%t] [%X{requestId}] %-5level %msg%n"/>
    </Console>
    <File name="File" fileName="/logs/mcorpus-gql-server.log">
      <PatternLayout pattern="%d{ISO8601} [%t] [%X{requestId}] %-5level %logger{36} %msg%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Logger name="org.jooq" level="info" />
    <Logger name="com.zaxxer.hikari" level="info" />
    <Logger name="io.netty" level="info" />
    <Logger name="graphql" level="info" />
    
    <Root level="DEBUG">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>
