<?xml version="1.0" encoding="UTF-8"?>
<!-- mcorpus AWS log config -->
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} [%-4T] [%X{requestId}] %-5level %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="com.zaxxer.hikari" level="warn" />
    <Logger name="graphql" level="off" /><!-- do NOT output raw graphql queries in error or otherwise! -->
    <Logger name="notprivacysafe" level="off" /><!-- part of graphql-java -->
    <Logger name="com.tll" level="DEBUG" /><!-- DEBUG log level for all com.tll.* loggers -->
    <Root level="INFO">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
